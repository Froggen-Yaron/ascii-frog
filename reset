#!/bin/bash

# Reset to State Zero - Interactive Launcher
# Simple launcher for the interactive reset script

set -euo pipefail

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
MAIN_SCRIPT="$SCRIPT_DIR/scripts/reset.sh"

# Check if main script exists
if [[ ! -f "$MAIN_SCRIPT" ]]; then
    echo "ERROR: Main reset script not found: $MAIN_SCRIPT"
    exit 1
fi

# Make it executable
chmod +x "$MAIN_SCRIPT"

# Call the interactive main script
exec bash "$MAIN_SCRIPT"